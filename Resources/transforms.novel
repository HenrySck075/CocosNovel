transform tcommon x=640 z=0.80
    yanchor 1.0
    on show
        ypos 1.03
        zoom z*0.95 alpha 0.00
        xcenter x yoffset -20
        easein 0.25 yoffset 0 zoom z alpha 1.00 easeend
    end on
    on replace
        alpha 1.00
        easein 0.25 xcenter x zoom z easeend
        easein 0.15 yoffset 0 ypos 1.03 easeend
    end on
end transform